@model aioi_insurance.Models.db.Customer
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout ="_Layout-Iframe";
} 
<style>
body {
  margin: 0 !important;
}
</style>

<div class="mb-3">
   <span class="text-danger">@ViewBag.message</span> 
  
   
   <form asp-controller="Register" asp-action="CreateCustomer" method="post">
   <div asp-validation-summary="ModelOnly" class="text-danger py-3"></div>

   <div class="card">
      <div class="card-header">
        ลงทะเบียนลูกค้า
      </div> 

    <div class="content p-3">
            <input class="form-control" type="text" name="CusId" id="CusId"  asp-for="CusId" value="x" hidden>
            <input class="form-control" type="text" name="RegistDate" id="RegistDate"  asp-for="RegistDate" value="@DateTime.Now" hidden>

          <div class="row form-group pb-2"> 
              <div class="col-2">
                <p for="TitleId" class="p-0 m-0">คำนำหน้า</p>
                <p for="TitleId" class="eng-label p-0 m-0">Titlename</p>
             </div>

            <div class="col-10 form-check"> 
                <span asp-validation-for="TitleId" class="text-danger"></span>
                 <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="TitleId" id="mrs"  asp-for="TitleId" value="1" checked>
                  <label class="form-check-label" for="mrs">
                    นาง
                  </label>
                </div>
            
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="TitleId" id="ms" value="2"  asp-for="TitleId">
                  <label class="form-check-label" for="ms">
                    นางสาว
                  </label>
                </div>

                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="TitleId" id="mr" value="3"  asp-for="TitleId">
                  <label class="form-check-label" for="mr">
                    นาย
                  </label>
                </div>
            </div> 
          </div>

           <div class="row form-group pb-2"> 
              <div class="col-md-2">
                <p for="name" class="p-0 m-0">ชื่อ</p>
                <p for="name" class="eng-label p-0 m-0">Firstname</p>
             </div>

            <div class="col-md-4">
                  <span asp-validation-for="Name" class="text-danger"></span>
                  <input class="form-control" type="text" id="name" asp-for="Name"> 
            </div>  
           
             <div class="col-md-2">
                <p for="surname" class="p-0 m-0">สกุล</p>
                <p for="surname" class="eng-label p-0 m-0">Surname</p>
             </div>

            <div class="col-md-4">
                  <span asp-validation-for="Surname" class="text-danger"></span>
                  <input class="form-control" type="text" id="surname" asp-for="Surname"> 
            </div>  
        </div>

         <div class="row form-group pb-2"> 
              <div class="col-md-2">
                <p for="dob" class="p-0 m-0">วันเกิด</p>
                <p for="dob" class="eng-label p-0 m-0">Birthday</p>
             </div>

            <div class="col-md-4">
                  <span asp-validation-for="Dob" class="text-danger"></span>
                  <input class="form-control" type="date" id="dob" asp-for="Dob"> 
            </div>  
           
             <div class="col-md-2">
                <p for="tel" class="p-0 m-0">โทร</p>
                <p for="tel" class="eng-label p-0 m-0">Tel</p>
             </div>

            <div class="col-md-4">
                  <span asp-validation-for="Tel" class="text-danger"></span>
                  <input class="form-control" type="tel" id="tel" asp-for="Tel"> 
            </div>  
        </div>

         <div class="row form-group pb-2"> 
              <div class="col-md-2">
                <p for="mail" class="p-0 m-0">อีเมล์</p>
                <p for="mail" class="eng-label p-0 m-0">Email</p>
             </div>

            <div class="col-md-4">
                  <span asp-validation-for="Email" class="text-danger"></span>
                  <input class="form-control" type="email" id="mail" asp-for="Email"> 
            </div>   
        </div>

        <div class="clearfix pb-2">
            <button type="submit" class="btn btn-success float-end px-5">ลงทะเบียน</button>
        </div>
    </div>
  </div>
  </form> 
  </div>

